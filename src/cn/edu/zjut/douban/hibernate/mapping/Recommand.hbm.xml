<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="cn.edu.zjut.douban.pojo">
    <class name="Recommand" table="t_movie_recommand">
        <id name="id" type="java.lang.Integer">
            <column name="id" />
            <generator class="identity" />
        </id>

        <many-to-one name="user" class="cn.edu.zjut.douban.pojo.User" column="user_id" fetch="join"></many-to-one>
        <many-to-one name="movie" class="cn.edu.zjut.douban.pojo.Movie" column="movie_id" fetch="join"></many-to-one>

        <property name="rate" type="double">
            <column name="rate" not-null="true" />
        </property>

    </class>
</hibernate-mapping>
